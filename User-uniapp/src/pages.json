{
	"easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui 规则如下配置
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
			// uView 规则如下配置
			"^u--(.*)": "uview-plus/components/u-$1/u-$1.vue",
			"^up-(.*)": "uview-plus/components/u-$1/u-$1.vue",
			"^u-([^-].*)": "uview-plus/components/u-$1/u-$1.vue"
		}
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页",
				"navigationBarTextStyle": "white",
				"navigationBarBackgroundColor": "#007AFF"
			}
		},
		{
			"path": "pages/my/my",
			"style": {
				"navigationBarTitleText": "我的",
				"navigationStyle": "custom",
				"disableScroll": false, // 允许页面滚动
				"enablePullDownRefresh": false, // 启用下拉刷新
				"backgroundColor": "#F8FDFF"
			}
		},
		{
			"path": "pages/chat/chat",
			"style": {
				"navigationBarTitleText": "chat"
			}
		},
		{
			"path": "pages/exam/exam",
			"style": {
				"navigationBarTitleText": "所有考试",
				"navigationStyle": "custom",
				"disableScroll": false, // 允许页面滚动
				"enablePullDownRefresh": true, // 启用下拉刷新
				"backgroundColor": "#F8FDFF", // 页面背景色
				"navigationBarTextStyle": "black", // 导航栏文字颜色
				"app-plus": {
					"bounce": "none",
					"pullToRefresh": {
						"support": true, // 是否支持下拉刷新
						"style": "circle",
						"color": "#007AFF" // 下拉刷新圆圈的颜色
					}
				}
			}
		},
		{
			"path": "pages/function/function",
			"style": {
				"navigationBarTitleText": "所有工具"
			}
		},
		{
			"path": "pages/public/searchview",
			"style": {
				"navigationBarTitleText": "搜索"
			}
		},
		{
			"path": "pages/exam/crquestionbankView",
			"style": {
				"navigationBarTitleText": "创建题库",
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/exam/subjectdetailview",
			"style": {
				"navigationBarTitleText": "考试详情"
			}
		},
		{
			"path": "pages/exam/PracticeSettingView",
			"style": {
				"navigationBarTitleText": "练习设置"
			}
		},
		{
			"path": "pages/exam/PracticeView",
			"style": {
				"navigationBarTitleText": "练习",
				"navigationStyle": "custom",
				"navigationBarTextStyle": "black" // 状态栏字体为白色，只能为 white-白色，black-黑色 二选一
			}
		},
		{
			"path": "pages/exam/PracticeResultsView",
			"style": {
				"navigationBarTitleText": "练习结果"
			}
		},
		{
			"path": "pages/my/UserInfoView",
			"style": {
				"navigationBarTitleText": "个人信息",
				"disableScroll": true // 禁止页面滚动
			}
		},
		{
			"path": "pages/my/UserRegisterView",
			"style": {
				"navigationBarTitleText": "注册"
			}
		},
		{
			"path": "pages/my/UserLoginView",
			"style": {
				"navigationBarTitleText": "登录",
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/exam/ManualImportView",
			"style": {
				"navigationBarTitleText": "手动导入"
			}
		},
		{
			"path": "pages/exam/UserBankView",
			"style": {
				"navigationBarTitleText": "题库详情",
				"disableScroll": true // 禁止页面滚动
			}
		},
		{
			"path": "pages/exam/WrongQuestionView",
			"style": {
				"navigationBarTitleText": "我的错题"
			}
		},
		{
			"path": "pages/my/MyFavoriteView",
			"style": {
				"navigationBarTitleText": "MyFavoriteView"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#666666",
		"selectedColor": "#007AFF",
		"backgroundColor": "#F8F8F8",
		"borderStyle": "black",
		"list": [
			{
				"pagePath": "pages/index/index",
				"text": "首页",
				"iconPath": "static/tabBar/index.png",
				"selectedIconPath": "static/tabBar/index-active.png"
			},
			{
				"pagePath": "pages/exam/exam",
				"text": "考试",
				"iconPath": "static/tabBar/exam.png",
				"selectedIconPath": "static/tabBar/exam-active.png"
			},
			{
				"pagePath": "pages/chat/chat",
				"text": "喵喵智答",
				"iconPath": "static/tabBar/chat.png",
				"selectedIconPath": "static/tabBar/chat.png"
			},
			{
				"pagePath": "pages/function/function",
				"text": "工具",
				"iconPath": "static/tabBar/function.png",
				"selectedIconPath": "static/tabBar/function-active.png"
			},
			{
				"pagePath": "pages/my/my",
				"text": "我的",
				"iconPath": "static/tabBar/my.png",
				"selectedIconPath": "static/tabBar/my-active.png"
			}
		]
	}
}